<div class="container">
  <h1>{{model.name}}</h1>
  <div class="row">
    <div class="col">
      {{#if model.description}}
        <p>{{model.description}}</p>
      {{else}}
        <p class="text-muted font-italic">No description.</p>
      {{/if}}
    </div>
    <div class="col">
      <img class="card-img-top" style="width: 300px;" src="/assets/images/pod-1.jpg" alt="Card image cap">
      <select name="productQuantity" onchange={{action (mut quantity) value="target.value"}}>
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
      </select>
      <button {{action "addToCart" model (hash quantity=quantity)}} type="button" name="button" class="btn btn-primary">Add to Cart</button>
    </div>
  </div>
</div>
