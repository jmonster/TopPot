<h2>inventory</h2>
<p>Product inventory tracks which products are available at a vendor.</p>

<div class="container x-form">
  <div class="row">
    <div class="col">
      <label>product inventory</label>
      {{#x-select value=vendor.products multiple=true action="productsChanged" as |xs|}}
        {{#each products as |product|}}
          {{#xs.option value=product}}{{product.name}}{{/xs.option}}
        {{/each}}
      {{/x-select}}
    </div>
  </div>
</div>
