<div class="container x-form">
  {{location-form record=vendor}}

  <div class="row">
    <div class="col">
      <label>products</label>
      {{#x-select value=vendor.products multiple=true as |xs|}}
        {{#each products as |product|}}
          {{#xs.option value=product}}{{product.name}}{{/xs.option}}
        {{/each}}
      {{/x-select}}
    </div>
  </div>
</div>

<button class="btn btn-primary" type="button" {{action "saveVendor" vendor}}>Save</button>
