{{#menu.item}}
  {{#paper-item class="md-2-line" onClick=(action (mut showDialog) true)}}
    {{yield}}
  {{/paper-item}}
{{/menu.item}}

{{#if showDialog}}
  {{#paper-dialog fullscreen=true onClose=(action (mut showDialog) false) clickOutsideToClose=true}}
  {{#paper-toolbar}}
     {{#paper-toolbar-tools}}
       <h2>ðŸŒ» Feedback</h2>
       <span class="flex"></span>

       {{#paper-button iconButton=true onClick=(action (mut showDialog) false)}}
         {{paper-icon icon="close"}}
       {{/paper-button}}
     {{/paper-toolbar-tools}}
   {{/paper-toolbar}}

    {{#paper-dialog-content}}
      <h2 class="md-title">{{title}}</h2>
      <p>{{body}}</p>
    {{/paper-dialog-content}}

    {{#paper-dialog-actions class="layout-row"}}
